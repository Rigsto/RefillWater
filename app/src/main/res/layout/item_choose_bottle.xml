<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/quarter_size"
    android:background="@drawable/bg_bottle"
    android:orientation="vertical"
    android:padding="@dimen/default_size">

    <ImageView
        android:id="@+id/img_choose_bottle_size"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_tumbler" />

    <TextView
        android:id="@+id/tv_choose_bottle_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/quarter_size"
        android:text="@string/_400_ml"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_mediumsmall" />
</LinearLayout>