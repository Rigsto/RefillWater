<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GallonVolumeActivity">

    <Toolbar
        android:id="@+id/tb_gallon_volume"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingEnd="60dp"
        android:background="@drawable/bg_toright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:navigationIcon="@drawable/ic_left_arrow">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gallon_volume"
            android:textSize="@dimen/text_medium"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textStyle="bold" />
    </Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_gallon_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_size" />
</LinearLayout>