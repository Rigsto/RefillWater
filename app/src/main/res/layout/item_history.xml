<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_summary"
    android:layout_marginStart="@dimen/default_size"
    android:layout_marginTop="@dimen/half_size"
    android:layout_marginEnd="@dimen/default_size"
    android:layout_marginBottom="@dimen/half_size"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/default_size"
    app:cardMaxElevation="0dp"
    app:contentPadding="@dimen/default_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_history"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_29_oct_2019_11_05"
            android:textSize="@dimen/text_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/half_size"
            android:contentDescription="@string/logo"
            android:src="@drawable/ic_water_glass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_history_time" />

        <TextView
            android:id="@+id/tv_history_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_50_ml"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/half_size"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/tv_history_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lantai_2"
            android:textSize="@dimen/text_small"
            app:layout_constraintStart_toStartOf="@+id/tv_history_size"
            app:layout_constraintTop_toBottomOf="@+id/tv_history_size" />

        <TextView
            android:id="@+id/tv_history_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_20"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_mediumsmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_history_size" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/small_water"
            android:layout_marginEnd="@dimen/quarter_size"
            app:layout_constraintBottom_toBottomOf="@+id/tv_history_point"
            app:layout_constraintEnd_toStartOf="@+id/tv_history_point"
            app:layout_constraintTop_toTopOf="@+id/tv_history_point" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>