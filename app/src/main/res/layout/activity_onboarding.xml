<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".intro.OnboardingActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_onboarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_size"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_onboarding_indicator_0"
            android:layout_width="@dimen/indicator"
            android:layout_height="@dimen/indicator"
            android:layout_marginEnd="@dimen/half_size"
            android:background="@drawable/circle_blue"
            android:contentDescription="@string/logo" />

        <ImageView
            android:id="@+id/img_onboarding_indicator_1"
            android:layout_width="@dimen/indicator"
            android:layout_height="@dimen/indicator"
            android:layout_marginEnd="@dimen/half_size"
            android:background="@drawable/circle_blue_light"
            android:contentDescription="@string/logo" />

        <ImageView
            android:id="@+id/img_onboarding_indicator_2"
            android:layout_width="@dimen/indicator"
            android:layout_height="@dimen/indicator"
            android:layout_marginEnd="@dimen/half_size"
            android:background="@drawable/circle_blue_light"
            android:contentDescription="@string/logo" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_onboarding_getstarted"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/double_size"
        android:layout_marginBottom="@dimen/double_size"
        android:background="@drawable/input_text_rounded_corner"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="@string/get_started"
        android:textColor="@android:color/white" />
</LinearLayout>