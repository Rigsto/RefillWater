<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gallon_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lantai_2"
            android:textSize="@dimen/text_mediumsmall"
            android:textColor="@android:color/black"
            android:layout_marginEnd="@dimen/half_size" />

        <ProgressBar
            android:id="@+id/pb_gallon_remain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/progressBarStyleHorizontal"
            android:backgroundTint="@color/colorPrimaryLight"
            android:progress="70"
            android:progressTint="@color/colorPrimaryLight"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/water_remaining" />

        <TextView
            android:id="@+id/tv_gallon_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1200_ml"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</LinearLayout>